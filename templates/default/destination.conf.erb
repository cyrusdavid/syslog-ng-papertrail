destination d_<%= @app.name %> {
  <% unless @app.udp.nil? %>
    udp("<%= @app.udp[:host] %>"
        port(<%= @app.udp[:port] %>)
      ,  mark_mode(<%= @app.mark_mode %>)
      <%= ", template(t_#{@app.template})" if @app.template %>
    );
  <% end %>
  <% unless @app.tcp.nil? %>
    tcp("<%= @app.tcp[:host] %>"
        port(<%= @app.tcp[:port] %>)
      ,  mark_mode(<%= @app.mark_mode %>)
      <%= ", template(t_#{@app.template})" if @app.template %>
    );
  <% end %>
};
